    "main": "build/index.js",
    "name": "yet-another-electron-react-boilerplate",
    "private": true,
    "scripts": {
        "build": "yarn build:renderer && yarn build:electron",
        "build:electron": "cross-env NODE_ENV=production webpack --config ./webpack/webpack.electron.prod.babel.js",
        "build:renderer": "cross-env NODE_ENV=production webpack --config ./webpack/webpack.renderer.prod.babel.js",
        "clean":"rimraf ./build ./dist",
        "dist": "yarn build && electron-builder",
        "start": "node -r @babel/register ./scripts/check-port-in-use.js && yarn start:renderer",
        "start:electron": "cross-env NODE_ENV=development electron -r ./scripts/babel-register.js ./electron/index.ts",
        "start:renderer": "cross-env NODE_ENV=development webpack serve --config ./webpack/webpack.renderer.dev.babel.js",
        "test": "jest"
    },
    "version": "1.0.0"
}